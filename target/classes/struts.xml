<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN"
        "https://struts.apache.org/dtds/struts-6.0.dtd">
<struts> 
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="css_xhtml" />

    <package name="default" extends="struts-default">
    
        <default-action-ref name="listCategories"/>

        <!-- List Categories Action -->
        <action name="listCategories" 
                class="controller.CategoryAction" 
                method="list">
            <result name="success">/category.jsp</result>
            <result name="input">/inputCategory.jsp</result>
        </action>

        <!-- Delete Category Action -->
        <action name="deleteCategory" 
                class="controller.CategoryAction" 
                method="delete">
            <result name="success" type="redirectAction">listCategories</result>
            <result name="input">/inputCategory.jsp</result>
        </action>

        <!-- Add Category Action -->
        <action name="addCategory" 
                class="controller.CategoryAction" 
                method="add">
            <result name="success" type="redirectAction">listCategories</result>
            <result name="input">/inputCategory.jsp</result>
        </action>

        <!-- Update Category Action -->
        <action name="updateCategory" 
                class="controller.CategoryAction" 
                method="update">
            <result name="success">/category.jsp</result>
            <result name="input">/inputCategory.jsp</result>
        </action>

        <!-- Search Categories Action -->
        <action name="searchCategories" 
                class="controller.CategoryAction" 
                method="search">
            <result name="success">/category.jsp</result>
            <result name="input">/searchedCategory.jsp</result>
        </action>
    </package>
</struts>
